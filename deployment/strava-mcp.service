[Unit]
Description=Strava MCP HTTP Server
After=network.target

[Service]
User=andy
WorkingDirectory=/home/andy/Dev/strava-activity-copilot
EnvironmentFile=/home/andy/Dev/strava-activity-copilot/backend/.env
# Note: MCP server needs some env vars too, specifically credentials if using refresh mode, 
# but our modified version relies on headers. However, it still uses client_id for refresh logic internally.
ExecStart=/home/andy/Dev/strava-activity-copilot/venv/bin/python mcp-server/src/strava_http_server.py
Restart=always

[Install]
WantedBy=multi-user.target
